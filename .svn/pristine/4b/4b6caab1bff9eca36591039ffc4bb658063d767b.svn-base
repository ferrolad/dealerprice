.overlay-bg, .overlay-bg-signup {
	display: none;
	position: absolute;
	top: 0;
	left: 0;
	height:100%;
	width: 100%;
	cursor: pointer;
	z-index: 9999; /* high z-index */
	background: #000; /* fallback */
	background: rgba(0,0,0,0.75);
}
	.overlay-content, .overlay-content-signup {
		display: none;
		background: #fff;
		padding: 1%;
		width: 635px;
		height:310px;
		position: relative;
		margin:0 auto; padding:0;
		cursor: default;
		border-radius: 4px;
		box-shadow: 0 0 5px rgba(0,0,0,0.9);
		padding:15px;
		background-color:#FFF; background-image:url(../images/header-bg-2.png);
		border:10px solid #555;
	}


/* media query for most mobile devices */
@media only screen and (min-width: 0px) and (max-width: 480px){

	.overlay-content, .overlay-content-signup{
		width: 100%;
		margin: 0 2%;
		left: 0;
	}
}

#loginFormOverlay a.popupCloseBtn:link{float:right; margin-top:-40px; margin-right:-40px;}
