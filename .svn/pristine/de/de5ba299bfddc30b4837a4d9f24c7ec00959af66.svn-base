/* CSS Document */
#adminDashboard{width:910px; padding:10px; margin:0 auto; padding:0;}
.adminLogo a:link, .adminLogo a:visited{color:#ff5757; a:link; font-size:30px; font-weight:bold; text-transform:uppercase; text-indent:-9999px; background:url('../images/logo.png') no-repeat; display:block;}
.adminLogo{width:250px; height:40px; float:left;}
#adminLastLogin{width:400px; float:right; text-align:right; padding:10px 20px; margin-top:20px;}
#mainmenu{clear:both;}
#orderStats{border-bottom:1px solid #CCC;}
#orderStats h2{font-size:16px; font-family:Calibri; text-transform:uppercase; border-bottom:1px solid #666; margin:0 0 5px 0; padding-bottom:5px; color:#222;}
#orderStats p{font-size:14px; font-family:Calibri; color:#222;}
#orderStats p span{float:right;}
#orderStats p.totalNo{font-weight:bold; border-top:1px dotted #666; padding-top:7px;}
#orderStats p.outOfStock{color:#F00;}
.stats{width:200px; height:250px; float:left; padding:10px; margin-right:5px;}
.statsContents{height:200px; overflow:auto; padding-right:10px;}

#dashboardIcons{padding-top:20px;}
.adminIcon{width:110px; height:100px; float:left; margin-bottom:20px;}
.adminIcon a:link{width:120px; height:100px; display:block; text-indent:-9999px; }
a#propertyIcon:link{background-image:url(../images/admin-icon-1.png);}
